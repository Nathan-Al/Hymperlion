<html>
<meta http-equiv="Content-Type" content="text/html; charset=iso-10646" />
<meta charset="UTF-8">
<LINK rel="icon" type="image/png" href="icone.jpg">
<!-- Icone de l onglet de la page web -->

<link type="text/css" rel="stylesheet" href='style-newsite.css'>

<head>
    <title>
        <%= Controller.titre_page %>
    </title>
    <!-- Titre de l onglet de la page web -->
</head>
<header>
    <div class="div-header-nom">
        <a href="../" class="a-headers">
            <h1> Hymperlion </h1>
        </a>
    </div>
    <div class="div-header-nom-site">
        <h1 class="h1-nomsite">
            <%= Controller.nompage %>
        </h1>
    </div>
</header>

<!-- Importations du css -->
<form method="post" class="form-1" action="" enctype="multipart/form-data">

    <body>
        <div class="conteneur-1" id="conteneur-1">
            <div class="div-1">
                <div class="div-2">
                    <h1 class="h1-a">Créer un nouveaux Site : </h1>
                    <label for="nomfichier">Nom du site : </label>
                    <input id="nomfichier" type="text" name="name" pattern="[aA-zZ]{1,10}" required>

                    <input type="submit" id="buttonSubmit" name="create">

                    <p id="warning_p" class="warning_p"></p>
                    Utiliser un thème ?
                    <input type="checkbox" name="use_theme" value="true" checked> Utiliser le thème default
                    <input type="radio" name="theme" value="default" checked>
                    </p>

                    <p>Eviter de mettre qu'elle que chose de stupide :-)</p>
                </div>

                <div class="div-3">

                    <%  
                    website_list = Controller.fonctionController.website_list;

                    if(website_list[0]!=null) 
                            website_list.forEach(function(element, indice) 
                            {
                        %>
                        <div class="affichage-div-image">
                            <div class="min-affichage-div-image">
                                <a class="a-image" href="">
                                    <div class="a-image-background">
                                        <!-- Background nom image (apparait en hover) -->
                                    </div>
                                </a>

                                <div class="div-image">
                                    <img class="Min-Image" src="default.png " />
                                </div>
                            </div>

                            <div class="div-affichage-image-gestion">
                                <p class="p-div-affichage-image-gestion">
                                    <%= element %>
                                </p>
                                <input type="radio" name="theme" value="<%= element %>">
                            </div>
                        </div>
                        <%
                                });
                            %>
                </div>
            </div>
        </div>
        <script type="text/javascript" src="script-newsite"></script>
    </body>
</form>

</html>